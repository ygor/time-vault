{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:{your-server-name}.database.windows.net,1433;Initial Catalog=TimeVault;Persist Security Info=False;User ID={your-username};Password={your-password};MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "{your-secure-key}",
    "Issuer": "TimeVault.API",
    "Audience": "TimeVault.Client",
    "ExpiryInDays": 7
  }
}
